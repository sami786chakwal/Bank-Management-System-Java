  "contributors": ["Muhammad Sami Choudhary"],
  "diagrams": [
    {
      "name": "Bank Management System Diagram",
      "elements": [
        {
          "id": "admin",
          "type": "external",
          "name": "Admin",
          "x": 100,
          "y": 100
        },
        {
          "id": "manager",
          "type": "external",
          "name": "Manager",
          "x": 100,
          "y": 300
        },
        {
          "id": "login_process",
          "type": "process",
          "name": "Login Process",
          "x": 300,
          "y": 200
        },
        {
          "id": "transaction_process",
          "type": "process",
          "name": "Transaction Process",
          "x": 500,
          "y": 200
        },
        {
          "id": "account_management",
          "type": "process",
          "name": "Account Management",
          "x": 500,
          "y": 400
        },
        {
          "id": "user_data_store",
          "type": "datastore",
          "name": "User Data Store",
          "x": 700,
          "y": 100
        },
        {
          "id": "account_data_store",
          "type": "datastore",
          "name": "Account Data Store",
          "x": 700,
          "y": 300
        },
        {
          "id": "console_output",
          "type": "external",
          "name": "Console Output",
          "x": 900,
          "y": 200
        }
      ],
      "dataflows": [
        {
          "id": "flow1",
          "source": "admin",
          "target": "login_process",
          "threats": [
            {
              "title": "Spoofing",
              "description": "Attacker logs in as Admin",
              "mitigation": "3-attempt login limit, strong password policy"
            },
            {
              "title": "Denial of Service",
              "description": "Brute-force attempts lock out admin",
              "mitigation": "Account lockout after 3 failed attempts"
            }
          ]
        },
        {
          "id": "flow2",
          "source": "manager",
          "target": "login_process",
          "threats": [
            {
              "title": "Spoofing",
              "description": "Attacker logs in as Manager",
              "mitigation": "Strong password and authentication"
            },
            {
              "title": "Denial of Service",
              "description": "Brute-force attempts lock out manager",
              "mitigation": "Account lockout after 3 failed attempts"
            }
          ]
        },
        {
          "id": "flow3",
          "source": "login_process",
          "target": "user_data_store",
          "threats": [
            {
              "title": "Tampering",
              "description": "Modify credentials in storage",
              "mitigation": "Secure password hashing, access controls"
            },
            {
              "title": "Information Disclosure",
              "description": "Credentials exposed to unauthorized users",
              "mitigation": "Encrypt sensitive data, restrict console output"
            }
          ]
        },
        {
          "id": "flow4",
          "source": "login_process",
          "target": "transaction_process",
          "threats": []
        },
        {
          "id": "flow5",
          "source": "transaction_process",
          "target": "account_data_store",
          "threats": [
            {
              "title": "Tampering",
              "description": "Modify account balances without authorization",
              "mitigation": "Input validation, role-based access control"
            },
            {
              "title": "Information Disclosure",
              "description": "Account balances leaked to unauthorized users",
              "mitigation": "Mask sensitive info, logging controls"
            }
          ]
        },
        {
          "id": "flow6",
          "source": "transaction_process",
          "target": "console_output",
          "threats": [
            {
              "title": "Information Disclosure",
              "description": "Sensitive info displayed on console",
              "mitigation": "Mask sensitive info, avoid showing credentials"
            }
          ]
        },
        {
          "id": "flow7",
          "source": "account_management",
          "target": "account_data_store",
          "threats": [
            {
              "title": "Elevation of Privilege",
              "description": "Admin/Manager escalates privileges improperly",
              "mitigation": "Role-based access, secure operations"
            },
            {
              "title": "Tampering",
              "description": "Modify account info without authorization",
              "mitigation": "Input validation, auditing"
            }
          ]
        }
      ]
    }
  ]
}
